<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sic_code_group_search_view" model="ir.ui.view">
            <field name="name">SIC (group)</field>
            <field name="model">sic_code.group</field>
            <field name="arch" type="xml">
                <search string="SIC (group)">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="division_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_division_id" string="Division"
                            context="{'group_by':'division_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sic_code_code_search_view" model="ir.ui.view">
            <field name="name">SIC (code)</field>
            <field name="model">sic_code.code</field>
            <field name="arch" type="xml">
                <search string="SIC (code)">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="group_id"/>
                    <field name="division_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_division_id" string="Division"
                            context="{'group_by':'division_id'}"/>
                        <filter name="group_by_group_id" string="Group"
                            context="{'group_by':'group_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sic_code_division_tree_view" model="ir.ui.view">
             <field name="name">sic_code_division_tree_view</field>
             <field name="model">sic_code.division</field>
             <field name="arch" type="xml">
                 <tree editable="top">
                     <field name="name"/>
                     <field name="description"/>
                     <field name="active"/>
                 </tree>
             </field>
         </record>

        <record id="sic_code_group_tree_view" model="ir.ui.view">
             <field name="name">sic_code_group_tree_view</field>
             <field name="model">sic_code.group</field>
             <field name="arch" type="xml">
                 <tree editable="top">
                     <field name="name"/>
                     <field name="description"/>
                     <field name="division_id"/>
                     <field name="active"/>
                 </tree>
             </field>
         </record>

        <record id="sic_code_code_tree_view" model="ir.ui.view">
             <field name="name">sic_code_code_tree_view</field>
             <field name="model">sic_code.code</field>
             <field name="arch" type="xml">
                 <tree editable="top">
                     <field name="name"/>
                     <field name="division_id"/>
                     <field name="group_id"/>
                     <field name="description"/>
                     <field name="active"/>
                 </tree>
             </field>
         </record>



        <record id="action_sic_code_division_view" model="ir.actions.act_window">
            <field name="name">SIC (division)</field>
            <field name="res_model">sic_code.division</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_sic_code_group_view" model="ir.actions.act_window">
            <field name="name">SIC (group)</field>
            <field name="res_model">sic_code.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_sic_code_code_view" model="ir.actions.act_window">
            <field name="name">SIC (code)</field>
            <field name="res_model">sic_code.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sic_code_code_search_view"/>
        </record>

        <menuitem id="menu_sic_code_root"
                    name="SIC Code"
                    parent="contacts.res_partner_menu_config"
                    sequence="1"/>

        <menuitem id="menu_sic_code_division"
                    name="Division"
                    parent="menu_sic_code_root"
                    sequence="1"
                    action="action_sic_code_division_view"/>

        <menuitem id="menu_sic_code_group"
                    name="Group"
                    parent="menu_sic_code_root"
                    sequence="2"
                    action="action_sic_code_group_view"/>

        <menuitem id="menu_sic_code_code"
                    name="Code"
                    parent="menu_sic_code_root"
                    sequence="3"
                    action="action_sic_code_code_view"/>
    </data>
</odoo>
